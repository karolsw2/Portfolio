@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,900')
@import url('https://fonts.googleapis.com/css?family=Maven+Pro:900')

//
body
	margin 0
	font-family 'Source Sans Pro'
a
	text-decoration none
	color inherit
.menu
	top 0 !important
	background rgb(250, 250, 250)
	z-index 999
	width 100%
	height 60px
	position fixed
	display flex
	justify-content space-between
	align-items center
	white-space nowrap
	transition-duration 0.4s
	color #777
	&--transparent
		background transparent
		color white
		.menu__logo
			p
				color white
				&:hover
					color white
					opacity 0.9
		.menu__button
			&:after,&:before
				border-bottom 2px solid white
			&:hover
				color white
	&__logo
		height 100%
		display flex
		padding 0 30px
		align-items center
		justify-content center
		box-sizing border-box
		p
			cursor pointer
			transition all .06s
			&:hover
				color #222
	&__buttons
		position relative
		display flex
		align-items center
		height 100%
	&__button
		min-width 160px
		height 100%
		box-sizing border-box
		padding 10px 30px
		cursor pointer
		display flex
		justify-content center
		align-items center
		transition all .12s
		&:after,&:before
			content ''
			display block
			position absolute
			margin 3px
			border-bottom 2px solid #444
			width 0
			bottom 8px
			transition all .12s
		&:hover
			color #222
			&:after,&:before
				width 50px

.heading
	position relative
	width 100%
	box-sizing border-box
	padding 145px 70px
	background-image url('../images/background.svg')
	background-size cover
	background-position top
	background-attachment fixed
	background-position-x right
	display flex
	justify-content center
	overflow hidden
	&__stack
		position absolute
		top 200px
		left -100px
		right 0
		height 472px
		z-index 3
		width 340px
	&__profile
		position absolute
		margin 0 auto
		top -110px
		left 0
		right 0
		width 180px
		height 180px
		border-radius 100%
		background-image url('https://scontent-waw1-1.xx.fbcdn.net/v/t1.0-9/26230556_1686468704707988_8072345125610695221_n.jpg?oh=dfa27f39568448403a24d6ceb562bc04&oe=5B18C0F6')
		background-size cover
	&__about
		position relative
		display block
		margin 0 auto
		width 100%
		z-index 2
		padding 70px 45px
		color #fff
		text-shadow 0 0 56px rgba(0, 0, 0, 0.6)
		background inherit
		overflow hidden
		max-width 700px
		&:after
			content ''
			position absolute
			width 100%
			height 100%
			background inherit
			left 0
			top 0
			bottom 0
			right 0
			box-shadow inset 0 0 60px rgba(255, 255, 255, 0.2)
			filter blur(12px)
			transition-duration 1s
		&:hover
			&:after
				filter blur(0px)
	&__content
		margin 0 auto
		max-width 600px
		text-align center
		position relative
		z-index 3
		h1
			font-weight 900
			font-family 'Maven Pro'
			font-size 2em
			position relative
			color #fff
			&:after
				content ''
				top 6px
				transform translateX(6px)
				display inline-block
				position absolute
				height 33px
				width 6px
				background #fff
				animation blink 1.23s linear infinite alternate
		p
			font-size 1.2em
			font-weight 100
.intro
	margin 0 auto
	max-width 1300px
	display grid
	grid-template 1fr / 1fr 1fr
	p
		font-size 1.2em
		color #555
		font-weight 100
		margin-left 5px
	&__slot
		width 100%
		box-sizing border-box
		padding 120px 50px
	&__title
		font-family 'Maven Pro'
		text-align left
		font-size 1.3em
		&:after
			content ''
			display block
			margin-top 4px
			width 53px
			border-bottom 3px solid #222
.portfolio
	width 100%
	background linear-gradient(to right, #05a9a6, #054780)
	color white
	box-sizing border-box
	padding 145px 10px
	position relative
	overflow hidden
	&__background
		position absolute
		right 20px
		top 200px
	&__title
		font-family 'Maven Pro'
		margin 7px
		text-align center
		font-size 2em
		font-weight 700
		&:after
			content ''
			display block
			margin 7px auto
			width 320px
			height 2px
			background white
	&__projects
		max-width 1300px
		margin 40px auto
		display grid
		grid-template 1fr / 1fr 1fr 1fr
		padding 15px
		box-sizing border-box
		grid-gap 60px
		width 100%
.project
	position relative
	width 380px
	height 82px
	margin 0 auto
	&--primary
		.project__title
			color #05a9a6
			&:after
				border-bottom 3px solid #05a9a6
	&__desc
		position absolute
		bottom 0
		left 0
		right 0
		background #fffffff3
		min-height 82px
		padding 18px
	&__title
		font-family 'Maven Pro'
		color rgba(0, 0, 0, 0.8)
		font-size 1.5em
		font-weight 700
		transition-duration 0.2s
		&:hover
			opacity 0.85
		&:after
			content ''
			display block
			margin-top 4px
			width 22%
			border-bottom 3px solid rgba(0, 0, 0, 0.8)
	&__about
		margin-top 4px
		color rgba(0, 0, 0, 0.5)
		font-size 0.92em
		font-weight 200
		max-width 90%
	&__annotation
		position absolute
		bottom 18px
		right 18px
		font-weight 200
		font-style italic
		font-size 0.92em
		color rgba(0, 0, 0, .3)
.footer
	width 100%
	box-sizing border-box
	padding 10px
	background #222
	color #eee
	text-align center
.contact
	width 100%
	color #222
	box-sizing border-box
	padding 115px 0
	position relative
	overflow hidden
	&__title
		font-family 'Maven Pro'
		margin 7px
		text-align center
		font-size 2em
		font-weight 700
		z-index 3
		&:after
			content ''
			display block
			margin 7px auto
			width 320px
			height 2px
			background #222
	&__websites
		max-width 1300px
		margin 40px auto
		display grid
		grid-template 1fr / 1fr 1fr 1fr
		padding 15px
		box-sizing border-box
		grid-gap 60px
		width 100%
	&__website
		position relative
		display flex
		align-items center
		justify-content space-between
		width 320px
		height 42px
		padding 10px
		margin 0 auto
		box-shadow 0 0 2px #999
		cursor pointer
		transition-duration 0.2s
		&:hover
			opacity 0.85
	&__image
		position relative
		height 48px
		width 48px
		img
			position absolute
			width 100%
			top 0
			left 0
			height 100%
	&__websiteTitle
		width 90%
		text-align center
		font-family 'Maven Pro'
		color rgba(0, 0, 0, 0.8)
		font-size 1.5em
		font-weight 700
@media screen and (max-width: 1160px)
	.portfolio__projects
		grid-template 1fr / 1fr 1fr
	.menu
		display none
	.heading
		margin-top 0
		height auto
		padding 60px
		&__about
			.heading__stack
				top 70px !important
	.intro__slot
		padding 110px 60px
@media screen and (max-width: 660px)
	.project
		padding 10px
		width 305px
	.portfolio__projects, .contact__websites
		grid-template 1fr / 1fr
	.intro
		grid-template 1fr / 1fr
		&__slot
			padding 52px 30px
	.heading
		padding 20px
	.heading__about
		h1
			font-size 1.8em
			&:after
				display none
// Animations
@keyframes rotate
	from
		transform rotate(0deg)
	to
		transform rotate(360deg)
@keyframes blink
	50%
		opacity 0
	100%
		opacity 1
@keyframes float
	0%
		transform translateY(0)
	50%
		transform translateY(-80px)
	100%
		transform translateY(0px)
.float
	animation-name float
	animation-duration 15s
	animation-iteration-count infinite
.rotate
	animation-name rotate
	animation-duration 50s
	animation-iteration-count infinite
	animation-timing-function linear

.revealOnScroll
	opacity 0

.revealAnimation
	animation-name reveal
	animation-duration 2.5s
	animation-iteration-count 1
	animation-timing-function cubic-bezier(.83,-0.07,.28,1.25)
	animation-fill-mode forwards

@keyframes reveal
	0%
		opacity 0
		transform scale(0.5, 0.5)
	100%
		opacity 1
		transform scale(1, 1)
